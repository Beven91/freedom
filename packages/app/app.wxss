page {
  height: 100%;
  width: 100%;
  margin: 0px;
  padding: 0px;
  display: flex;
  flex-direction: column;
  font-family: "Helvetica Neue",
                 Helvetica,
                 Tahoma,
                 Arial,
                 "PingFang SC",
                 "Hiragino Sans GB",
                 "Heiti SC",
                 STXihei,
                 "Microsoft YaHei",
                 SimHei,
                 "WenQuanYi Micro Hei",
                 sans-serif;
  -webkit-font-smoothing: antialiased;
  backface-visibility: hidden;
}

.layout {
  box-sizing: border-box;
  flex:1;
}
